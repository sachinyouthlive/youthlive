<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoPlayer">


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/main_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:surface_type="texture_view"
        app:resize_mode="fill"
        android:layout_centerInParent="true"/>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#000000"
        android:text="TextView"
        android:textColor="#ffffff"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/view2"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginBottom="110dp"
        android:layout_marginEnd="8dp"
        android:elevation="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/thumb_camera_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <com.streamaxia.android.CameraPreview
                android:id="@+id/thumb_camera1"
                android:layout_width="120dp"
                android:layout_height="160dp" />


            <include
                layout="@layout/thumb_count_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/thumb_countdown"
                android:visibility="gone"
                />


        </RelativeLayout>


        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/thumb_frame1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view6"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/view2"
        android:visibility="gone">


        <com.streamaxia.android.CameraPreview
            android:id="@+id/thumb_camera2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />


        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/thumb_frame2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:visibility="gone"/>


    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:scaleType="centerCrop"
        />

    <include
        layout="@layout/player_loading"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/loading_popup"
        />

    <ProgressBar
        android:id="@+id/progressBar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>